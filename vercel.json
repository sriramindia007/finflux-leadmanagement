{
  "buildCommand": "npm install --prefix packages/web && npm run build --prefix packages/web",
  "outputDirectory": "packages/web/dist",
  "functions": {
    "packages/web/api/*.js": {}
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/packages/web/api/server" },
    { "source": "/((?!api).*)", "destination": "/index.html" }
  ]
}
